# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api
API_VERSION=v1

# CORS (Required in Production)
CORS_ORIGIN=http://localhost:3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sponsiwise?schema=public"

# Redis (Required in Production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Authentication (Critical)
JWT_ACCESS_SECRET="super-secret-access-key-change-me"
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET="super-secret-refresh-key-change-me"
JWT_REFRESH_EXPIRES_IN=7d

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=password
SMTP_FROM="Sponsiwise <no-reply@sponsiwise.com>"

# Security
BCRYPT_SALT_ROUNDS=12
